<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout_full"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEDCC6"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView

        android:id="@+id/cvSearch"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="30dp">

        <EditText
            android:id="@+id/edtSeachK"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:text="Search Coffee in my Shop"
            android:textColor="#989898" />

        <Button
            android:id="@+id/btnSeachK"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search"
            app:backgroundTint="@null"
            />
        <!--        android:src="@drawable/search"-->
        <!--        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"-->

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/LiearLayout_andmuch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvlisthereK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="cursive"
            android:text="and much more in the list here..."
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCategoryK"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/danhmuc"
            app:backgroundTint="@null"/>

        <TextView
            android:id="@+id/tvcategoryK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Category"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvListCategory"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#FCEDDF"
        app:cardCornerRadius="30dp">

        <ImageButton
            android:id="@+id/imgbtnFreeshipK"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/freeship"/>
        <TextView
            android:id="@+id/tvfreeK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:text="FreeShip" />


        <ImageButton
            android:id="@+id/imgbtncafeK"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cafehoathinh" />
        <TextView
            android:id="@+id/tvcfK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="70dp"
            android:text="Coffee" />


        <ImageButton
            android:id="@+id/imgbtnfrostyK"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/frosty" />
        <TextView
            android:id="@+id/tvfrostyK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="70dp"
            android:text="FrostyCaramel" />


        <ImageButton
            android:id="@+id/imgbtnteaK"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/tea" />
        <TextView
            android:id="@+id/tvteaK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="170dp"
            android:text="Tea" />


        <ImageButton
            android:id="@+id/imgbtncakeK"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/banh" />
        <TextView
            android:id="@+id/tvcakeK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="170dp"
            android:text="Cake" />


        <ImageButton
            android:id="@+id/imgbtnicreK"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/icecream" />
        <TextView
            android:id="@+id/tvicreaK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="170dp"
            android:text="Ice cream" />

        <ImageButton
            android:id="@+id/imgbtnmoreK"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/more" />
        <TextView
            android:id="@+id/tvmoreK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="323dp"
            android:layout_marginTop="170dp"
            android:text="More" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_Limited"
        android:layout_width="380dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#313131"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Limited offer"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tvPromon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:text="Promontion ends after : 00:21:47"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/capuchino1" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="20dp"
            android:text="Capuchino - $2.7"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="20dp"
            android:text="Buy now"
            android:backgroundTint="#F8CF81"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="160dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/cafedua" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="150dp"
            android:text="CocutCoffee - $2.7"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="160dp"
            android:text="Buy now"
            android:backgroundTint="#F8CF81"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="300dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/cafemuoi" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="140dp"
            android:text="Egg Coffee - $2.7"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="170dp"
            android:backgroundTint="#F8CF81"
            android:text="Buy now" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_foryou"
        android:layout_width="380dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:text="Suggestions for you"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="25dp"
            app:cardCornerRadius="10dp">

            <ImageButton
                android:id="@+id/img_sale_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sale_dua" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="110dp"
            app:cardCornerRadius="10dp">

            <ImageButton
                android:id="@+id/img_sale_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sale_capuchino" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="195dp"
            app:cardCornerRadius="10dp">

            <ImageButton
                android:id="@+id/img_sale_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sale_trung" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="275dp"
            app:cardCornerRadius="10dp">

            <ImageButton
                android:id="@+id/img_sale_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sale_dua" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="355dp"
            app:cardCornerRadius="10dp">

            <ImageButton
                android:id="@+id/img_sale_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sale_trung" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnprofileK"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/home"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/btncartK"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/heart"
            app:backgroundTint="@null"
            android:layout_marginLeft="40dp"/>
        <Button
            android:id="@+id/btnheartK"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/cart"
            app:backgroundTint="@null"
            android:layout_marginLeft="40dp" />
        <Button
            android:id="@+id/btnhomeK"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/user"
            app:backgroundTint="@null"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

</LinearLayout>